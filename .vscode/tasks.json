{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "gcc build active file",
      "command": "/usr/bin/gcc",
      "args": [
        "-g",
        "-Wall",
        "-Wextra",
        "${workspaceFolder}/*.c", 
        //"${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "/usr/bin"
      }
    },
    {
      "type": "shell",
      "label": "gcc build & run active file",
      "command": "gcc",
      "args": [
        "-Wall",
        "-Wextra",
        "${workspaceFolder}/*.c", 
        //"${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "/usr/bin"
      }
    }
  ],

}